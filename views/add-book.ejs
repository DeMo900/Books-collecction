<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add a New Book</title>
  <link rel="stylesheet" href="/css/add.css">
</head>

<body>
  <%-include('includes/nav.ejs')%>
  <div class="add-book-container">
    <div class="book-preview">
      <img id="cover-preview" src="https://images.unsplash.com/photo-1663465374413-83cba00bff6f?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=580" alt="Book Cover">
      <label for="cover" class="upload-btn">Upload Cover</label>
      <input type="file" id="cover" name="cover" accept="image/*" hidden>
    </div>

    <div class="book-form">
      <h1>Add a New Book</h1>

      <!-- placeholder for error messages (server or client can fill/remove .hidden) -->
      <% if (error !==""){%>
       <%error.forEach((el)=>{%>
      <div id="error-box" class="error-box" role="alert" aria-live="assertive"><%=el.msg%></div>
        <%})%>
      <%}%>
      
      <!-- enable file uploads -->
      <form action="/books/add-book" method="POST" >
        <div class="input-group">
          <label for="title" >Title</label>
          <input type="text" name="title" id="title" value= "<%=body!==""?body.title:""%>"  placeholder="Book title" minlength="4" maxlength="80" required>
        </div>

        <div class="input-group">
          <label for="author">Author</label>
          <input type="text" id="author" name="author" placeholder="Author name" requiredvalue= "<%=body!==""?body.author:""%>">
        </div>

        <div class="input-group">
          <label for="desc">Description</label>
          <textarea id="description" name="desc" placeholder="Write a short description..."value= "<%=body!==""?body.desc:""%>"></textarea>
        </div>

        <div class="input-group">
          <label for="genre">Genre</label>
          <div class="select-wrapper">
            <select id="genre" name="genre" class="custom-select" required aria-label="Genre">
              <option value="" disabled selected>Select a genre</option>
              <option value="Fiction">Fiction</option>
              <option value="Non-Fiction">Non-Fiction</option>
              <option value="Fantasy">Fantasy</option>
              <option value="Science Fiction">Science Fiction</option>
              <option value="Romance">Romance</option>
              <option value="Thriller">Thriller</option>
              <option value="Mystery">Mystery</option>
              <option value="Biography">Biography</option>
              <option value="Self-Help">Self-Help</option>
              <option value="History">History</option>
              <option value="Poetry">Poetry</option>
            </select>
            <span class="select-arrow" aria-hidden="true"></span>
          </div>
          <div class="genre-display" id="genre-display" aria-hidden="true">Selected: â€”</div>
        </div>

        <!-- simplified published year input (no JS picker) -->
        <div class="input-group">
          <label for="publisyear">Published Year</label>
          <input type="number" id="publisyear" name="publisyear" min="1970" max="3000" placeholder="e.g. 2023" required class="custom-select" maxlength="4"
          value= "<%=body!==""?body.publisyear:""%>"/>
        </div>

        <div class="input-group">
          <label>Cover</label>
          <div class="file-row">
            <label for="cover" class="upload-btn">Upload Cover</label>
            <span class="file-name" id="file-name">No file chosen</span>
            <input type="file" id="cover" name="cover" accept="image/*" hidden>
          </div>
        </div>

        <button type="submit" class="submit-btn">Add Book</button>
      </form>
    </div>
  </div>

  <script src="/js/add-book.js"></script>
</body>
</html>
